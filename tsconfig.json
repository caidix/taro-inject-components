{
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "ES2015",
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "./src",
    "module": "ESNext",
    "sourceMap": true,
    "declaration": true
  },
  "include": ["./src", "global.d.ts"]
}
